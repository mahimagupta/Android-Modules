<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
<PreferenceCategory 
    android:summary="Username and login information"
    android:title="Login Information"
    >
    <EditTextPreference 
        android:key="username"
        android:summary="Enter your username"
        android:title="Username"
        />
    <EditTextPreference 
        android:key="password"
        android:summary="Enter your password"
        android:title="Password"
        />
</PreferenceCategory>
<PreferenceCategory 
    android:summary="Username Information"
    android:title="Settings"
    >
    
    <CheckBoxPreference 
        android:key="checkbox"
        android:summary="On/Off"
        android:title="Keep me logged in"
        />
    <ListPreference 
        android:entries="@array/list_options"
        android:entryValues="@array/list_values"
        android:key="listoptions"
        android:summary="List Prefs Example"
        android:title="List Prefs"
        />
</PreferenceCategory>
</PreferenceScreen>